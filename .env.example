# Elegant Tiles User Site - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ⚠️ Must be the SAME project as admin dashboard!

# Project URL (e.g., https://abc...xyz.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=

# Anonymous (public) key - safe to expose in client
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# App URL (production URL when deployed)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# App name
NEXT_PUBLIC_APP_NAME=Elegant Tiles & Décor

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Environment
NODE_ENV=development

# Contact email (for footer, etc.)
NEXT_PUBLIC_CONTACT_EMAIL=hello@eleganttiles.co.ke
NEXT_PUBLIC_CONTACT_PHONE=+254 700 000 000

# Social media links (optional)
NEXT_PUBLIC_FACEBOOK_URL=
NEXT_PUBLIC_INSTAGRAM_URL=
NEXT_PUBLIC_TWITTER_URL=

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=

# Error tracking (optional)
# SENTRY_DSN=
